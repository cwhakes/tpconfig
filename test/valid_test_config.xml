        <!--terminalType: Unknown, PointOfSale, ECommerce, Moto, FuelPump, Atm.-->
        <terminalType>1</terminalType>
        <!--Driver values can be: Null, VeriFoneXpi, VerifoneFormAgentXpi, IngenicoRba.-->
        <driver>GiftNull</driver>
